<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_bg"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_menu1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/menu_tab1"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="主页"
        android:textColor="@drawable/selector_text_81d8d0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_menu2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/menu_tab2"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="分类"
        android:textColor="@drawable/selector_text_81d8d0"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_menu3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/menu_tab3"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="我"
        android:textColor="@drawable/selector_text_81d8d0"
        android:textSize="12sp" />



</LinearLayout>